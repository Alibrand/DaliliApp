<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_back"
    tools:context=".AdminHomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lines="2"
        android:text="DALILI \n ADMIN"
        android:textColor="@color/dark_green"
        android:textSize="40sp"
        android:shadowRadius="8"
        android:shadowColor="#6C6A6A"
        android:shadowDy="10"
        android:shadowDx="2"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/history_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_item_back"
        android:text="Manage History Info"
        android:lines="2"
        android:paddingVertical="15dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"
        android:textColor="@color/second_color"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/places"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_item_back"
        android:text="Manage Places"
        android:lines="2"
        android:paddingVertical="15dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"
        android:textColor="@color/second_color"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/events"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_item_back"
        android:text="Manage Events"
        android:lines="2"
        android:paddingVertical="15dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"
        android:textColor="@color/second_color"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chatbot"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_item_back"
        android:text="Manage ChatBot"
        android:lines="2"
        android:paddingVertical="15dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"
        android:textColor="@color/second_color"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/feedbacks"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_item_back"
        android:text="Feedbacks"
        android:lines="2"
        android:paddingVertical="15dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"
        android:textColor="@color/second_color"/>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_item_back"
        android:text="Logout"
        android:lines="2"
        android:paddingVertical="5dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:backgroundTint="#E4AA16"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"
        android:textColor="@color/second_color"/>


</androidx.appcompat.widget.LinearLayoutCompat>